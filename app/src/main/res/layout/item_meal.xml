<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/TextBoxStyle"
    android:backgroundTint="#f1f2f0"
    android:layout_marginTop="5dp"
    android:useDefaultMargins="true"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:marqueeRepeatLimit="marquee_forever"
    android:scrollHorizontally="true"
    android:columnCount="6">

    <ImageView
        android:id="@+id/mealImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/mealTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meal"
        android:textColor="#262626"
        android:layout_below="@id/mealImageView"
        style="@style/MealListTextStyle"
        android:layout_marginTop="-20dp"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:backgroundTint="@color/beige_radish"
        android:background="@drawable/round_titles"/>

    <TextView
        android:id="@+id/mealDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#979797"
        android:textSize="14dp"
        android:text="meal description"
        android:layout_marginTop="30dp"
        android:layout_below="@id/mealTitle"
        android:maxLines="2"
        android:ellipsize="end"
        style="@style/MealListTextStyle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/mealDescription"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#ddf7c2"
            android:background="@drawable/circle_background_image">
            <ImageView
                android:id="@+id/ingredientImage1"
                style="@style/MealIngredientTinyImage" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#e6f8f9"
            android:background="@drawable/circle_background_image">
            <ImageView
                android:id="@+id/ingredientImage2"
                style="@style/MealIngredientTinyImage"  />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#ffffec"
            android:background="@drawable/circle_background_image">
            <ImageView
                android:id="@+id/ingredientImage3"
                style="@style/MealIngredientTinyImage"  />
            </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#cfe6ff"
            android:background="@drawable/circle_background_image">
            <ImageView
                android:id="@+id/ingredientImage4"
                style="@style/MealIngredientTinyImage"  />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#ffffd9"
            android:background="@drawable/circle_background_image">
            <ImageView
                android:id="@+id/ingredientImage5"
                style="@style/MealIngredientTinyImage"  />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#def9b0"
            android:background="@drawable/circle_background_image">
            <ImageView
                android:id="@+id/ingredientImage6"
                style="@style/MealIngredientTinyImage"  />
        </FrameLayout>

    </LinearLayout>
</RelativeLayout>
