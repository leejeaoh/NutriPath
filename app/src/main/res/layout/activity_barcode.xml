<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Camera preview" />

    <TextView
        android:id="@+id/bottomTextMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Align the barcode into the camera view to scan it."
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:background="#80000000" />

    <EditText
        android:id="@+id/manualBarcodeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/previewView"
        android:layout_margin="16dp"
        android:hint="Enter barcode manually"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/findFoodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/manualBarcodeInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Find Food" />
</RelativeLayout>
